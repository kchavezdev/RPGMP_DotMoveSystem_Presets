{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES6",
        "lib": ["ES6", "DOM"],
        "downlevelIteration": true,
        "removeComments": true,
        "strictNullChecks": true,
        "baseUrl": "src",
        "moduleResolution": "Node"
    },
    "include": ["src/**/*", "spec/**/*", "include/**/*"],
    "exclude": ["node_modules"]
}